<h1>Bagmons</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Force</th>
      <th>Agility</th>
      <th>Icon</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bagmons.each do |bagmon| %>
      <tr>
        <td><%= bagmon.description %></td>
        <td><%= bagmon.force %></td>
        <td><%= bagmon.agility %></td>
        <td><%= bagmon.icon %></td>
        <td><%= bagmon.category_id %></td>
        <td><%= link_to 'Show', bagmon %></td>
        <td><%= link_to 'Edit', edit_bagmon_path(bagmon) %></td>
        <td><%= link_to 'Destroy', bagmon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

